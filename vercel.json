{
  "version": 2,
  "installCommand": "python3 -m pip install -r requirements.txt",
  "buildCommand": "python manage.py migrate && python manage.py collectstatic --noinput",
  "functions": {
    "api/wsgi.py": {
      "memory": 128,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/wsgi.py"
    }
  ]
}
